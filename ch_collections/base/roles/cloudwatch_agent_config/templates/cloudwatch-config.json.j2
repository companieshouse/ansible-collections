{
  "agent": {
   "metrics_collection_interval": {{ metrics_collection_interval }},
   "region": "{{ region }}",
   "logfile": "{{ cloudwatch_agent_log_file }}",
   "debug": false,
   "run_as_user": "{{ cw_agent_user }}",
   "omit_hostname": true
  },
  {% if cw_log_files is defined -%}
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {%+ for logname, logdata in cw_log_files.items() -%}
          {
              "file_path": "{{ logdata.file_path | default(default_log_path) }}/{{ logname }}",
              "log_group_name": "{{ logdata.log_group_name | default(default_log_group_name) }}",
              "log_stream_name": "{instance_id}_{hostname}",
              "timezone": "Local"
          }{%+ if not loop.last -%},{%+ endif -%}
          {%+ endfor -%}
        ]
      }
    },
    "log_stream_name": "{instance_id}_{hostname}"
  }
  {% endif -%}
  {% if cw_collect_metrics is defined -%}
  "metrics": {
    "metrics_collected": {
      "procstat": [
        {%+ for procstat in cw_collect_procstat_metrics -%}
        {
          "pid_file": {{ procstat.pid }},
          "measurement": {{ procstat.measurement }}
        }{%+ if not loop.last -%},{%+ endif -%}
        {%+ endfor -%}
      ]
    },
    {% if cw_collect_metrics_append_dimensions is defined -%}
    "append_dimensions": {
      {%+ for dimension in cw_collect_metrics_append_dimensions -%}
        {{ dimension.option }}: {{ dimension.setting }}
    {% endif -%}
    "force_flush_interval": {{ force_flush_interval }}
  }
  {% endif -%}
}

